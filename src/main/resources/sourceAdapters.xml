        <languages>
            <lang desc="Español">es</lang>
            <lang desc="Inglés">en</lang>
        </languages>
    </adapter>-->

    <adapter name="Trakt" limit="true" sinceDate="false" untilDate="false" languages="false" imdbID="true" fileUpload="false">
        <class>es.uned.adapters.sources.TraktSearch</class>
        <languages>
            <lang desc="Inglés">en</lang>
        </languages>
    </adapter>

    <adapter name="Dataset" limit="false" siceDate="false" untilDate="false" languages="true" imdbID="false" fileUpload="true">
        <class>es.uned.adapters.sources.Dataset</class>
        <languages>
            <lang desc="Español">es</lang>
            <lang desc="Inglés">en</lang>
        </languages>
    </adapter>

    <adapter name="Frase" limit="false" sinceDate="false" untilDate="false" languages="true" imdbID="false" fileUpload="false">
        <class>es.uned.adapters.sources.SentenceSearch</class>
        <languages>
            <lang desc="Español">es</lang>
            <lang desc="Inglés">en</lang>
        </languages>
    </adapter>

</adapters>